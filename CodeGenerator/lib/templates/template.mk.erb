<%= prefix %>_SRC_FILES = <%= source_files %>
<%= prefix %>_SOURCES = $(addprefix $(GEN_SRC_DIR)/, $(<%= prefix %>_SRC_FILES))

<%= prefix %>_OBJ_DIR = $(OBJ_DIR)/gen
<%= prefix %>_OBJ_FILES = $(<%= prefix %>_SRC_FILES:.cpp=.o)
<%= prefix %>_OBJECTS = $(addprefix $(<%= prefix %>_OBJ_DIR)/, $(<%= prefix %>_OBJ_FILES))

SOURCES += $(addprefix $(GEN_SRC_DIR)/, $(<%= prefix %>_SRC_FILES))
OBJECTS += $(addprefix $(<%= prefix %>_OBJ_DIR)/, $(<%= prefix %>_OBJ_FILES))

$(<%= prefix %>_OBJ_DIR)/%.o: $(GEN_SRC_DIR)/%.cpp
	mkdir -p $(dir $@) && $(CXX) $(CXXFLAGS) -c $< -o $@
